<%= content_tag :article, class: "md:grid md:grid-cols-4 md:items-baseline" do %>
  <%= render UI::Card.new(class_name: "md:col-span-3") do %>
    <%= render UI::Card::Title.new(href: url_for(article)) do %>
      <%= article.data.title %>
    <% end %>

    <% unless hide_date %>
      <%= render UI::Card::Eyebrow.new(as: "time", decorate: true, class_name: "md:hidden", datetime: article.date) do %>
        <%= article.formatted_date %>
      <% end %>
    <% end %>

    <%= render UI::Card::Description.new do %>
      <%= article.data.description %>
    <% end %>

    <%= render UI::Card::CTA.new do %>
      Read article
    <% end %>
  <% end %>

  <% if !hide_date %>
    <%= render UI::Card::Eyebrow.new(as: "time", class_name: "mt-1 hidden md:block", datetime: article.date) do %>
      <%= article.formatted_date %>
    <% end %>
  <% end %>
<% end %>
